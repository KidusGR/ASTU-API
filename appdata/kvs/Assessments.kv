<AssessmentsScreen>:
    name: "Assessments"
    id: assess
    FitImage:
        source:"appdata/image/astu_green.png"
        size_hint: 1, None
        size: "30dp", root.width
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        opacity: 0.15
    MDNavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: "vertical"
                    size_hint: 1, 1
                    md_bg_color: (30/255,30/255,30/255,1)

                    MDTopAppBar:
                        title: "[font=appdata/font/neuropol.otf][size=14]Assessments[/size][/font]"
                        md_bg_color: app.theme_cls.primary_light
                        elevation: 0
                        specific_text_color: (30/255,30/255,30/255,1)
                        left_action_items: [["menu", lambda x: nav_drawer.set_state('toggle')]]

                    MDFloatLayout:
                        id: floatA

                        MDLabel:
                            text: "Developed By  |  Kidus_GR"
                            font_size: "10dp"
                            halign: "center"
                            # size_hint_y: None
                            # height: self.texture_size[1]
                            # padding_y: "15dp"
                            pos_hint: {"center_x": 0.5, "center_y": 0.1}
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color
                            font_name: 'appdata/font/neuropol.otf'
                            size_hint_y: 1

        MDNavigationDrawer:
            id: nav_drawer
            radius: 0

            MDBoxLayout:
                id: boxL
                size_hint: 1, 1
                orientation: "vertical"
                spacing: "5dp"

                ScrollView:
                    MDList:
                        id: list
