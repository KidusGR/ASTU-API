<AssessmentsScreen>:
    name: "Assessments"
    id: assess
    FitImage:
        source:"appdata/image/astu_green.png"
        size_hint: 1, None
        size: "30dp", root.width
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        opacity: 0.15
    MDNavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: "vertical"
                    size_hint: 1, 1
                    md_bg_color: (30/255,30/255,30/255,1)

                    MDTopAppBar:
                        title: "[font=appdata/font/neuropol.otf][size=14]Assessments[/size][/font]"
                        md_bg_color: app.theme_cls.primary_light
                        elevation: 0
                        specific_text_color: (30/255,30/255,30/255,1)
                        left_action_items: [["menu", lambda x: nav_drawer.set_state('toggle')]]
                        right_action_items: [["reload"]]

                    MDFloatLayout:
                        id: floatA

                        MDCard:
                            id: card
                            orientation: "vertical"
                            size_hint: 0.9, None
                            height: "480dp"
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}
                            radius: 0
                            md_bg_color: (30/255, 30/255, 30/255, 1)
                            ScrollView:
                                MDBoxLayout:
                                    id: boxA
                                    md_bg_color: (30/255, 30/255, 30/255, 1)
                                    size_hint: 1, 1
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                    orientation: "vertical"

        MDNavigationDrawer:
            id: nav_drawer
            radius: 0

            MDBoxLayout:
                id: boxL
                size_hint: 1, 1
                orientation: "vertical"
                spacing: "5dp"

                ScrollView:
                    MDList:
                        id: list
