<ProfileScreen>:
    name: "Profile"
    id: home
    FitImage:
        source:"appdata/image/astu_green.png"
        size_hint: 1, None
        size: "30dp", root.width
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        opacity: 0.15
    MDNavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: "vertical"
                    size_hint: 1, 1
                    md_bg_color: (30/255,30/255,30/255,1)

                    MDTopAppBar:
                        title: "[font=appdata/font/neuropol.otf]Profile[/font]"
                        md_bg_color: app.theme_cls.primary_light
                        elevation: 0
                        specific_text_color: (30/255,30/255,30/255,1)
                        left_action_items: [["menu", lambda x: nav_drawer.set_state('toggle')]]

                    MDFloatLayout:

                        Image:
                            source: "appdata/image/astu_green.png"
                            pos_hint: {"center_x": 0.5, "center_y": 0.9}
                            size_hint: None, None
                            size: "70dp", "70dp"

                        MDLabel:
                            id: Login_Label
                            text: "WELCOME TO ASTU-API"
                            size_hint_x: 0.9
                            #font_size: "15dp"
                            halign: "center"
                            size_hint_y: None
                            # height: self.texture_size[1]
                            padding_y: "55dp"
                            pos_hint: {"center_x": 0.5, "center_y": 0.8}
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color
                            font_name: 'appdata/font/neuropol.otf'


                        MDLabel:
                            text: "Developed By  |  Kidus_GR"
                            font_size: "10dp"
                            halign: "center"
                            # size_hint_y: None
                            # height: self.texture_size[1]
                            # padding_y: "15dp"
                            pos_hint: {"center_x": 0.5, "center_y": 0.1}
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color
                            font_name: 'appdata/font/neuropol.otf'
                            size_hint_y: 1

        MDNavigationDrawer:
            id: nav_drawer
            radius: 0

            MDBoxLayout:
                size_hint: 1, 1
                orientation: "vertical"
                spacing: "5dp"

                FitImage:
                    size_hint: None, None
                    source: "appdata/image/NoUser.jpg"
                    radius: 360
                    pos_hint: {"center_x": 0.5}
                Widget:
                    size_hint_y: None
                    height: "10dp"
                MDLabel:
                    md_bg_color: app.theme_cls.primary_color
                    text: 'Name : "Student"'
                    theme_text_color: "Custom"
                    text_color: (30/255,30/255,30/255,1)
                    font_style: "Subtitle1"
                    font_name: 'appdata/font/neuropol.otf'
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    md_bg_color: app.theme_cls.primary_color
                    text: 'ID : "Student ID"'
                    theme_text_color: "Custom"
                    text_color: (30/255,30/255,30/255,1)
                    font_style: "Caption"
                    font_name: 'appdata/font/neuropol.otf'
                    size_hint_y: None
                    height: self.texture_size[1]
                ScrollView:
                    MDList:
                        id: list
