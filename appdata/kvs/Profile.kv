<ProfileScreen>:
    name: "Profile"
    id: profile
    FitImage:
        source:"appdata/image/astu_green.png"
        size_hint: 1, None
        size: "30dp", root.width
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        opacity: 0.15
    MDNavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: "vertical"
                    size_hint: 1, 1
                    md_bg_color: (30/255,30/255,30/255,1)

                    MDTopAppBar:
                        title: "[font=appdata/font/neuropol.otf][size=14]Profile[/size][/font]"
                        md_bg_color: app.theme_cls.primary_light
                        elevation: 0
                        specific_text_color: (30/255,30/255,30/255,1)
                        left_action_items: [["menu", lambda x: nav_drawer.set_state('toggle')]]
                        right_action_items: [["reload"]]

                    MDFloatLayout:
                        id: floatP
                        FitImage:
                            id: profile
                            pos_hint: {"x": 0.05, "center_y": 0.9}
                            size_hint: None, None
                            size: "100dp", "100dp"
                            radius: 0
                        MDCard:
                            id: card
                            orientation: "vertical"
                            size_hint: None, None
                            size: "165dp", "100dp"
                            pos_hint: {"x": 0.4, "center_y": 0.9}
                            radius: 0
                            md_bg_color: (30/255, 30/255, 30/255, 1)
                        MDCard:
                            id: cardTwo
                            orientation: "vertical"
                            size_hint: 0.9, None
                            height: "385dp"
                            pos_hint: {"center_x": 0.5, "center_y": 0.43}
                            radius: 0
                            md_bg_color: (30/255, 30/255, 30/255, 1)
                            MDBoxLayout:
                                id: boxP
                                md_bg_color: (30/255, 30/255, 30/255, 1)
                                size_hint: 1, 1
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                orientation: "vertical"
                                OneLineIconListItem:
                                    bg_color: (1,1,1,0.2)
                                    pos_hint: {"center_x": 0.5, "center_y": 1}
                                    size_hint: 1, None
                                    height: "25dp"
                                    MDIcon:
                                        icon: "identifier"
                                        pos_hint: {"center_x": 0.05, "center_y": 0.6}
                                        padding_x: "15dp"
                                        font_size: "15dp"
                                        theme_text_color: "Custom"
                                        text_color: self.theme_cls.primary_color
                                        halign: "center"
                                    MDLabel:
                                        text: "Profile Information"
                                        text_align: "center"
                                        theme_text_color: "Custom"
                                        text_color: self.theme_cls.primary_color
                                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                        font_name: 'appdata/font/neuropol.otf'
                                        theme_text_color: "Custom"
                                        text_color: app.theme_cls.primary_color
                                        font_size: "10dp"
                                        padding_x: "25dp"

                        

        MDNavigationDrawer:
            id: nav_drawer
            radius: 0

            MDBoxLayout:
                id: boxL
                size_hint: 1, 1
                orientation: "vertical"
                spacing: "5dp"

                
                ScrollView:
                    MDList:
                        id: list
