MDNavigationDrawer:
    id: nav_drawer
    radius: 0

    MDBoxLayout:
        size_hint: 1, 1
        orientation: "vertical"
        spacing: "5dp"

        FitImage:
            size_hint: None, None
            source: "appdata/image/NoUser.jpg"
            radius: 360
            pos_hint: {"center_x": 0.5}
        Widget:
            size_hint_y: None
            height: "10dp"
        MDLabel:
            md_bg_color: app.theme_cls.primary_color
            text: 'Name : "Student"'
            theme_text_color: "Custom"
            text_color: (30/255,30/255,30/255,1)
            font_style: "Subtitle1"
            font_name: 'appdata/font/neuropol.otf'
            size_hint_y: None
            height: self.texture_size[1]

        MDLabel:
            md_bg_color: app.theme_cls.primary_color
            text: 'ID : "Student ID"'
            theme_text_color: "Custom"
            text_color: (30/255,30/255,30/255,1)
            font_style: "Caption"
            font_name: 'appdata/font/neuropol.otf'
            size_hint_y: None
            height: self.texture_size[1]
        